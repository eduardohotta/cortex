{
  "name": "interview-assistant",
  "version": "1.0.0",
  "description": "AI-powered interview assistant with invisible overlay",
  "main": "electron_main.js",
  "scripts": {
    "start": "chcp 65001 > nul && vite build && electron .",
    "dev": "chcp 65001 > nul && vite build --watch & electron .",
    "build": "vite build && electron-builder",
    "test": "node --test tests/"
  },
  "author": "Interview Assistant",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.0",
    "@google/generative-ai": "^0.2.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@vitejs/plugin-react": "^5.1.2",
    "@xenova/transformers": "^2.17.2",
    "clsx": "^2.1.1",
    "compromise": "^14.14.5",
    "electron-store": "^8.1.0",
    "framer-motion": "^12.29.0",
    "groq-sdk": "^0.3.3",
    "lucide-react": "^0.563.0",
    "node-llama-cpp": "^3.15.0",
    "openai": "^4.28.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "vite": "^7.3.1",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.interview.assistant",
    "productName": "CORTEX",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "electron_main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*"
    ]
  }
}
